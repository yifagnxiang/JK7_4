@using (Html.BeginForm("post_product", "Appointment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>Product</h2>
    <span>活动类型：</span><select id="select_option_type">
    <option value="0">--请选择--</option>
    <option value="1">静态停泊</option>
    <option value="2">户外运动套餐</option>
    <option value="3">学习体验</option>
    <option value="4">商务接待</option>
    <option value="5">浪漫约会</option>
    <option value="6">亲子家庭</option>
    <option value="7">轻度冒险</option>
    <option value="8">休闲娱乐</option>
    </select>
    <div>
        <span> 图片上传：</span> <input type="file" name="file" />
    </div>
        <div>
           <span>标题：</span> <input type="text" name="title" class="title" />
        </div>
        <div>
            <span> 内容：</span> <textarea name="content" class="content"></textarea>
    </div>
        <div>
            <span>   时间：</span> <input type="date" class="date" name="date" />
        </div>
        <div>
            <span> 限定人数：</span> <input type="number" name="number" class="number" />
    </div>
        <div>
            <span>价格：</span> <input type="text" name="price" class="price" />
    </div>
        <div>
            <span>出发地点：</span> <input type="text" name="pointOfDeparture" class="pointOfDeparture" />
    </div>
    <div>
        <input type="submit"  value="提交" />
    </div>
    
}