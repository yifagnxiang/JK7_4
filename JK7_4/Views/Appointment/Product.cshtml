@{
    ViewBag.Title = "Product";
}
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#but_submit").click(function () {
            var select_option_type = $("#select_option_type").val(), file_img = $(".file_img").val(), date = $(".date").val, price = $(".price").val(), number = $(".number").val(), pointOfDeparture = $(".pointOfDeparture").val(),title=$(".title").va(),content=$(".content").val();

            if (select_option_type=="0") {
                alert("请填写会员类型");
            }
            else if (file_img=="") {
                alert("请上传图片");
            }
           else if (date=="") {
               alert("请填写出海时间");
           }
           else if (price=="") {
               alert("请填写价格");
           }
           else if (pointOfDeparture == "") {
               alert("请填写出海地点");
           }
           else if (number == "") {
               alert("请填写出海人数");
           }
           else if (title == "")
           {
               alert("请填写标题");
           }
           else if (content == "") {
               alert("请填写内容");
           }
            $.post(
                "/Appointment/post_product",
                { select_option_type: select_option_type, file_img: file_img, price: price, number: number, date: date, pointOfDeparture: pointOfDeparture,title:title },
                function (data)
                {
                    if (data=="Success") {
                        alert("添加数据成功 ！");
                    }
                    else if (data == "Defeated")
                    {
                        alert("添加信息失败！");
                    }
                    else if (data == "file")
                    {
                        alert("图片只能上传.jpg,.png");
                    }

                }
                )
        });
    });
</script>

<h2>Product</h2>
活动类型：<select id="select_option_type">
    <option value="0">--请选择--</option>
    <option value="1">静态停泊</option>
    <option value="2">户外运动套餐</option>
    <option value="3">学习体验</option>
    <option value="4">商务接待</option>
    <option value="5">浪漫约会</option>
    <option value="6">亲子家庭</option>
    <option value="7">轻度冒险</option>
    <option value="8">休闲娱乐</option>
</select>
<div>
    图片上传： <input type="file" name="file_img" id="file_img"/>
</div>
<div>
    标题：<input type="text" name="title" class="title" />
</div>
<div>
   内容：<textarea name="content" class="content"></textarea>
</div>
<div>
    时间：<input type="date"class="date" />
</div>
<div>
    限定人数：<input type="number" name="number" class="number" />
</div>
<div>
    价格：<input type="text" name="price" class="price" />
</div>
<div>
    出发地点：<input type="text" name="pointOfDeparture" class="pointOfDeparture" />
</div>
<div>
    <input type="button" id="but_submit" value="提交" />
</div>
